@model IceCreamProject.Models.Feedback

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1 class="section-title position-relative text-center mb-5">Contact Us For Any Query</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="contact-form bg-light rounded p-5">
                    <div id="success"></div>
                    <form asp-action="Create"  novalidate="novalidate">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-row">
                            <div class="col-sm-6 control-group">
                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" type=" text" class="form-control p-4" id="name" placeholder="Your Name" required="required" data-validation-required-message="Please enter your name" />
                                <p class="help-block text-danger"></p>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 control-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" type="email" class="form-control p-4" id="email" placeholder="Your Email" required="required" data-validation-required-message="Please enter your email" />
                                <p class="help-block text-danger"></p>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                   
                        <div class="control-group">
                            <label asp-for="Message" class="control-label"></label>
                            <textarea asp-for="Message" class="form-control p-4" rows="6" id="message" placeholder="Message" required="required" data-validation-required-message="Please enter your message"></textarea>
                            <p class="help-block text-danger"></p>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div>
                            <button class="btn btn-primary btn-block py-3 px-5" value="Create" type="submit" >Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<!-- Contact End -->