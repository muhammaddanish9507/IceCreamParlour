@model IEnumerable<IceCreamProject.Models.Recipe>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>



<body>
    <section  id="main-content">
        <section class="wrapper">

            <div class="table-agile-info">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Add Recipes
                    </div>
                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>
            <table  class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipe_By)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.R_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.R_Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe_By)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.R_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.R_Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Procedure)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Recipe_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Recipe_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Recipe_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
                </div>
            </div>
        </section>
        <!-- footer -->
        <div class="footer">
            <div class="wthree-copyright">
                <p>© 2017 Visitors. All rights reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
            </div>
        </div>
        <!-- / footer -->
    </section>
</body>
</html>
